    <Grid>
        <local:ControlExample x:Name="Example1" HeaderText="">
            <StackPanel Orientation="Vertical">
                <Image Source="/Assets/typography.png" Height="450">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Display" PlacementRect="200,0,0,100"/>
                    </ToolTipService.ToolTip>
