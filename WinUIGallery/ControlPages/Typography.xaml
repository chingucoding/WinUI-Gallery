                    </StackPanel>
                    <Grid Width="240" Height="120" Background="Transparent" ColumnDefinitions="200, Auto, *" RowDefinitions ="50, Auto, *" Canvas.ZIndex="1">
                        <TextBlock Text="Example" Grid.Column="0" Grid.Row="0" />
                        <TextBlock Text="Weight" Grid.Column="1" Grid.Row="0" />
                        <TextBlock Text="Caption" Grid.Column="0" Grid.Row="1" />
                        <TextBlock Text="400" Grid.Column="1" Grid.Row="1" />
                    </Grid>
                    <TextBlock Text="Caption" Canvas.ZIndex="1" />
                </Canvas>
            </StackPanel>
            <local:ControlExample.Xaml>
                <x:String>
                    &lt;Image Source="/Assets/SampleMedia/treetops.jpg" Height="100" /&gt;
                </x:String>
            </local:ControlExample.Xaml>
        </local:ControlExample>
